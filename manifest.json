{
    "name": "Daniel's Extension",
    "description": "Userscripts etc.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.linkedin.com/*"
            ],
            "css": [
                "linkedin.css"
            ]
        },
        {
            "matches": [
                "https://*.pagerduty.com/global/authn/authentication/PagerDutyGlobalLogin/subdomain"
            ],
            "js": [
                "pd-signin.js"
            ]
        },
        {
            "matches": [
                "https://*.twitter.com/*"
            ],
            "css": [
                "twitter.css"
            ]
        },
        {
            "matches": [
                "https://*.zoom.us/s/*"
            ],
            "js": [
                "zoom.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}